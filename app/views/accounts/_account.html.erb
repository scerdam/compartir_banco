<div data-controller="account" id="<%= dom_id account %>">
  <div class="p-5 mb-8 bg-slate-100 rounded-lg dark:bg-gray-800 dark:border-gray-700">
    <a href="#">
      <div class="float-right">
        <%= render(CopyButtonComponent.new(text: 'Copiar',target: 'target')) %>
      </div>
      <p class="text-gray-400 dark:text-gray-400"><%= t('activerecord.attributes.account.name') %></p>
      <p class="mb-2 font-medium text-gray-900 dark:text-white"><%= account.user.full_name %></p>
    </a>

    <div class="float-right">
      <%= render(CopyButtonComponent.new(text: 'Copiar',target: 'target')) %>
    </div>
    <p class="text-gray-400 dark:text-gray-400"><%= t('activerecord.attributes.account.rut') %></p>
    <p data-account-target="account" class="mb-2 font-medium text-gray-700 dark:text-gray-400"><%= account.user.rut %></p>

    <div class="float-right">
      <%= render(CopyButtonComponent.new(text: 'Copiar',target: 'target')) %>
    </div>
    <p class="text-gray-400 dark:text-gray-400"><%= t('activerecord.attributes.bank.name') %></p>
    <p class="mb-2 font-medium text-gray-700 dark:text-gray-400"><%= account.bank.name %></p>

    <div class="float-right">
      <%= render(CopyButtonComponent.new(text: 'Copiar',target: 'target')) %>
    </div>
    <p class="text-gray-400 dark:text-gray-400"><%= t('activerecord.attributes.account.type_account') %></p>
    <p class="mb-2 font-medium text-gray-700 dark:text-gray-400"><%= account.type_account %></p>

    <div class="float-right">
      <%= render(CopyButtonComponent.new(text: 'Copiar',target: 'target')) %>
    </div>
    <p class="text-gray-400 dark:text-gray-400"><%= t('activerecord.attributes.account.number') %></p>
    <p  class="mb-2 font-medium text-gray-700 dark:text-gray-400"><%= account.number %></p>
    
    <div class="float-right">
      <%= render(CopyButtonComponent.new(text: 'Copiar',target: 'target')) %>
    </div>
    <p class="text-gray-400 dark:text-gray-400"><%= t('activerecord.attributes.user.email') %></p>
    <p class="mb-2 font-medium tracking-tight text-gray-700 dark:text-gray-400"><%= account.user.email %></p>
    <div class="flex justify-center py-3 pt-5">
      <button data-action="click->account#copy" class="inline-flex items-center px-5 py-2  font-bold text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.666 3.888A2.25 2.25 0 0013.5 2.25h-3c-1.03 0-1.9.693-2.166 1.638m7.332 0c.055.194.084.4.084.612v0a.75.75 0 01-.75.75H9a.75.75 0 01-.75-.75v0c0-.212.03-.418.084-.612m7.332 0c.646.049 1.288.11 1.927.184 1.1.128 1.907 1.077 1.907 2.185V19.5a2.25 2.25 0 01-2.25 2.25H6.75A2.25 2.25 0 014.5 19.5V6.257c0-1.108.806-2.057 1.907-2.185a48.208 48.208 0 011.927-.184" />
          </svg>
          <span class="mx-2">Copiar todos los datos</span>
      </button>
    </div>
  </div>
  <h5 class="flex items-center justify-center mb-3 pt-12 text-2xl text-center font-medium tracking-tight text-gray-700 dark:text-white">
  <svg class="w-10 h-10 mr-3 text-gray-700 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
      <path d="M19 5h-1.382l-.171-.342A2.985 2.985 0 0 0 14.764 3H9.236a2.984 2.984 0 0 0-2.683 1.658L6.382 5H5a3 3 0 0 0-3 3v11a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8a3 3 0 0 0-3-3Zm-3.5 7a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0Z"/>
    </svg>
    Datos de transferencia
  </h5>
  <div class="flex justify-center items-center pb-12 "> 
    <img src="https://i.ibb.co/tJTLY8F/qrcode.png" alt="qrcode" border="0" width="350" />
  </div> 
  <% if action_name != "show" %>
    <%= link_to "Show this account", account, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this account", edit_account_path(account), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
